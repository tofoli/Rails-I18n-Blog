<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to(t('layout.posts'), root_path, class: 'navbar-brand') %>
    </div>
    <div class="navbar-collapse collapse">
      <div class="col-sm-3 col-md-3">
        <form class="navbar-form" role="search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="<%= t('layout.search') %>" name="q" value="<%= params[:q] %>">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
        </form>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= t('layout.admin') %> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to(t('layout.users'), users_path) %></li>
            <li><%= link_to(t('layout.posts'), posts_path) %></li>
          </ul>
        </li>
        <%= render 'devise/menu/login_items' %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>
<% if notice %>
<div class="alert alert-success">
  <p class="notice"><%= notice %></p>
</div>
<% end %>
<% if alert %>
<div class="alert alert-danger">
  <p class="alert"><%= alert %></p>
</div>
<% end %>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
