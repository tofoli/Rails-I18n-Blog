<p id="notice"><%= notice %></p>

<h1><%= t('.listing') %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.post.title') %></th>
      <th><%= t('activerecord.attributes.post.created_at') %></th>
      <th><%= t('activerecord.attributes.post.active') %></th>
      <th><%= t('activerecord.attributes.post.user') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= l(post.created_at) %></td>
        <td><%= human_boolean(post.active) %></td>
        <td><%= post.user.email %></td>
        <td><%= link_to t('crud.show'), admin_post_path(post), class: 'btn btn-success' %></td>
        <td><%= link_to t('crud.edit'), edit_admin_post_path(post), class: 'btn btn-primary' %></td>
        <td><%= link_to t('crud.destroy'), admin_post_path(post), method: :delete, data: { confirm: t('crud.confirm') }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('crud.new'), new_admin_post_path, class: 'btn btn-default' %>
